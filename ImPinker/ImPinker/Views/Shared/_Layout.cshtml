</html>
<script type="text/javascript">
    $(document).ready(function () {
        $(".search-submit").click(function () {
            search();
        });
        //回车
        $(document).keydown(function (event) {
            if (event.keyCode == 13) {
                search();
            }
        });
        //设置搜索框文本
        var keys = $.getUrlParam("key");
        var tabs = $("#tabList a[class='b_yaowen b_twolcur']").text();
        if (keys != null && keys.length > 0) {
            keys = keys.replace("," + tabs, "");
            $("#searchterm").val(keys);
        }
    });
    function search() {
        var keyword = $("#searchterm").val();
        var tabStr = $("#tabList a[class='b_yaowen b_twolcur']").text();
        if (tabStr!=null&&tabStr.length>0) {
            keyword = keyword + "," + tabStr;
        }
        window.location = ("/Search/Index?key=" + keyword+"&tab="+tabStr);
    }
</script>
