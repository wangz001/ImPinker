@using ImModel.ViewModel
@using ImPinker.Common
@{
    var list = (List<ArticleViewModel>)Model;
}
<!-- Swiper -->
<div class="swiper-container" style="width: 1100px; height: 300px;">
        @{
            for (int i = 0; i < list.Count; i++)
            {
                var vm=list[i];
                if (i%3 == 0)
                {
                    Html.Raw("<div class=\"swiper-slide\">");
                    <a href="/Article/Index?id=@vm.Id">
                        <img src="@ImageUrlHelper.GetArticleCoverImage(vm.CoverImage, 0)" />
                    </a>
                    Html.Raw("</div>");
                }
                else
                {
                    <a href="/Article/Index?id=@vm.Id">
                        <img src="@ImageUrlHelper.GetArticleCoverImage(vm.CoverImage, 0)" />
                    </a>
                }
            }
        }
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>

<script src="~/Scripts/Swiper/js/swiper.jquery.js"></script>
<script type="text/javascript">
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        paginationClickable: true,
        spaceBetween: 30,
        centeredSlides: true,
        mousewheelControl: true,
        loop: true,
        autoplay: 2500,
        autoplayDisableOnInteraction: false
    });
</script>