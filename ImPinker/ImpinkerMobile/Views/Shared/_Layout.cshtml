<!DOCTYPE html>
<html lang="zh">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="initial-scale=1, maximum-scale=1">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
        <link href="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/css/sm.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/css/sm-extend.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("//g.alicdn.com/sj/lib/zepto/zepto.js")" type="text/javascript"></script>
        @Styles.Render("~/Content/mobileCss", "~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("Head", false)
    </head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
<div data-role="page" data-theme="b">
    <div data-role="header">
        @if (IsSectionDefined("Header"))
        {
            @RenderSection("Header")
        }
        else
        {
            <h1>@ViewBag.Title</h1>
            @Html.Partial("_LoginPartial")
        }
    </div>
    <div data-role="content">
        @RenderBody()
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script>
    $(document).on("mobileinit", function() {
        $.mobile.ajaxEnabled = false;
    });
</script>
@Scripts.Render("~/bundles/jquerymobile")
<script src="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/js/sm.js")" type="text/javascript"></script>
<script src="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/js/sm-extend.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/commonUtil.js")" type="text/javascript"></script>

@RenderSection("scripts", required: false)
</body>
@RenderSection("Foot", false)
</html>
